<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="br.com.apinteractive.starwarsapp.ui.main.MainFragment"
        android:label="@string/title_app"
        tools:layout="@layout/main_fragment">

        <action
            android:id="@+id/action_navigation_home_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:popUpTo="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="br.com.apinteractive.starwarsapp.ui.movie.MovieDetailFragment"
        android:label="@string/title_app"
        tools:layout="@layout/movie_fragment">

        <argument
            android:name="movie_id"
            app:argType="string" />
    </fragment>

</navigation>
